#!/bin/sh

BASEDIR=$(cd `dirname $0`; pwd)
DOWNLOADROOT=${BASEDIR}/../../../../dl
OUTPUTROOT=${BASEDIR}/../../../../output
BUILDROOT=${BASEDIR}/../../../../build

source ${BASEDIR}/env.sh

TARBALL=Python-${BASE_VERSION}.tgz

cd ${DOWNLOADROOT}
if [ -f ${TARBALL} ];then
    echo ${TARBALL}" exists, stop downloading"
else
    echo ${TARBALL}" not exists, downloading"
    wget https://www.python.org/ftp/python/${BASE_VERSION}/${TARBALL}
fi
tar zxf ${TARBALL}
mv Python-${BASE_VERSION} ${BUILDROOT}/python3

cd ${BUILDROOT}/python3/
./configure --prefix=${CONFIG_PREFIX} --enable-shared
sudo make -j4 install

if [ ! -h /usr/lib64/libpython3.6.so ]; then
    sudo ln -sf ${CONFIG_PREFIX}/lib/libpython3.6.so /usr/lib64/
fi
if [ ! -h /usr/lib64/libpython3.6.so.1.0 ]; then
    sudo ln -sf ${CONFIG_PREFIX}/lib/libpython3.6.so.1.0 /usr/lib64/
fi

cd ${CONFIG_PREFIX}/bin
sudo ./pip3 install --upgrade setuptools pip

if [[ ${OS_RELEASE} == 'centos' || ${OS_RELEASE} == 'redhat' ]]; then
    source ${BASEDIR}/./centos/${OS_VERSION}/*
elif [[ ${OS_RELEASE} == 'ubuntu' ]]; then
    source ${BASEDIR}/./ubuntu/${OS_CODENAME}/*
fi

